<idea-plugin>
    <id>com.lecheng.hello.idextxt</id>
    <name>IdeaTxt</name>
    <version>1.0</version>
    <vendor email="lechenggood@foxmail.com" url="https://github.com/lechenghhh/IdeaTxt">NCS Earth
        Defense Center
    </vendor>

    <description><![CDATA[
      看小说神器，alt + o 下翻页  alt + i 显示log<br>
      <em></em>
    ]]></description>

    <change-notes><![CDATA[
      lechenggood@foxmail.com<br>
      <em></em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="IdeaTxt" secondary="true" icon="/ic.png" anchor="bottom"
            factoryClass="TxtTool.Window.TxtToolWindow" />
    </extensions>

    <application-components>
        <component>
            <implementation-class>TxtTool.Window.TxtToolWindow</implementation-class>
        </component>
    </application-components>

    <actions>

        <group id="IdeaTxt.Setting" text="Window" description="IdeaTxt Setting">
            <add-to-group group-id="WindowMenu" anchor="last" />
            <action id="IdeaTxt.Setting.NextPage" class="TxtTool.Action.NextPage" text="下一页">
                <keyboard-shortcut first-keystroke="alt ]" keymap="$default" />
            </action>
            <action id="IdeaTxt.Setting.ShowLog" class="TxtTool.Action.ShowLog" text="显示调试">
                <keyboard-shortcut first-keystroke="alt [" keymap="$default" />
            </action>
            <action id="IdeaTxt.Setting.FilePath" class="TxtTool.Menu.SettingFilePath"
                text="设置文件路径" />
            <action id="IdeaTxt.Setting.TextNum" class="TxtTool.Menu.SettingTextNum"
                text="设置每页字数"></action>

            <!--<action id="IdeaTxt.Setting.TextSize" class="TxtTool.Menu.SettingTextNum" text="设置字体大小" />-->
        </group>

    </actions>

